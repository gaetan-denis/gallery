{% extends 'base.html.twig' %}

{% block title %}Détails{% endblock %}

{% block body %}
    <main class="container">
        <section class="row">
            <div class="col-md-12">
                <h2>{{painting.titre}}</h2>
            </div>
            <div class="col-md-4">
                <img src="{{ asset('/img/paints/') ~ painting.image }}" alt="{{ painting.titre }}">
            </div>
            <div class="row--md-6 row-10">

                <p>
                    <h3>Caractéristiques</h3>
                    Année de création: {{ painting.creation }}<br>
                    Catégorie : {{ painting.category.name }}<br>
                    Technique : {{ painting.technical.name }}<br>
                    Hauteur : {{ painting.hauteur }} cm <br>
                    Largeur: {{ painting.largeur }} cm <br>
                </p>
                <p>
                    <h3>Description</h3>
                    {{ painting.description }}
                </p>
                <p><a href="{{ path('home') }}" class="btn btn-dark">Retour à l'accueil</a></p>
            </div>
            <div class="mt-5">
                <h2>Votre Commentaire</h2>
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-dark">Ajoutez un commentaire</button>
                {{ form_end(form) }}
            </div>


            <div class="mt-5">
                <h3>Commentaires :</h3>
                    {% for comment in comments %}
                        <div class="card mt-4 border">
                            <div>
                                <h4>Nom d'utilisateur {{ comment.name }}</h4>
                            </div>
                            <div class="card-img-top">
                                <blockquote class="blockquote mb-0">
                                    <p>{{ comment.comment }}</p>
                                    <footer class="blockquote-footer text-start">Le {{ comment.createdAt|date('d/m/Y') }} </footer>
                                </blockquote>
                            </div>
                        </div>
                    {% endfor %}
            </div>
        </section>
    </main>
{% endblock %}
